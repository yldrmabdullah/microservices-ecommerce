<?xml version="1.0" encoding="UTF-8"?>
<suppressions>
    <!-- Suppress false positives and acceptable vulnerabilities -->
    
    <!-- Spring Boot Starter Dependencies - False Positives -->
    <suppress>
        <notes>Suppress false positive for Spring Boot starter dependencies</notes>
        <packageUrl regex="true">^pkg:maven/org\.springframework\.boot/spring-boot-starter.*$</packageUrl>
        <cve>CVE-2016-1000027</cve>
    </suppress>
    
    <!-- H2 Database - Test Scope Only -->
    <suppress>
        <notes>H2 database is only used in test scope</notes>
        <packageUrl regex="true">^pkg:maven/com\.h2database/h2.*$</packageUrl>
        <scope>test</scope>
    </suppress>
    
    <!-- Jackson Databind - False Positives -->
    <suppress>
        <notes>Suppress false positive for Jackson databind</notes>
        <packageUrl regex="true">^pkg:maven/com\.fasterxml\.jackson\.core/jackson-databind.*$</packageUrl>
        <cve>CVE-2020-36518</cve>
    </suppress>
    
    <!-- JUnit - Test Scope Only -->
    <suppress>
        <notes>JUnit is only used in test scope</notes>
        <packageUrl regex="true">^pkg:maven/org\.junit\.jupiter/junit-jupiter.*$</packageUrl>
        <scope>test</scope>
    </suppress>
    
    <!-- Mockito - Test Scope Only -->
    <suppress>
        <notes>Mockito is only used in test scope</notes>
        <packageUrl regex="true">^pkg:maven/org\.mockito/mockito.*$</packageUrl>
        <scope>test</scope>
    </suppress>
    
    <!-- Spring Security - False Positives -->
    <suppress>
        <notes>Suppress Spring Security false positives</notes>
        <packageUrl regex="true">^pkg:maven/org\.springframework\.security/spring-security.*$</packageUrl>
        <cve>CVE-2018-1258</cve>
    </suppress>
    
    <!-- Spring Framework - False Positives -->
    <suppress>
        <notes>Suppress Spring Framework false positives</notes>
        <packageUrl regex="true">^pkg:maven/org\.springframework/spring-.*$</packageUrl>
        <cve>CVE-2018-1275</cve>
    </suppress>
    
    <!-- Logback - False Positives -->
    <suppress>
        <notes>Suppress Logback false positives</notes>
        <packageUrl regex="true">^pkg:maven/ch\.qos\.logback/logback.*$</packageUrl>
        <cve>CVE-2017-5929</cve>
    </suppress>
    
    <!-- SLF4J - False Positives -->
    <suppress>
        <notes>Suppress SLF4J false positives</notes>
        <packageUrl regex="true">^pkg:maven/org\.slf4j/slf4j.*$</packageUrl>
        <cve>CVE-2018-8088</cve>
    </suppress>
    
    <!-- Apache Commons - False Positives -->
    <suppress>
        <notes>Suppress Apache Commons false positives</notes>
        <packageUrl regex="true">^pkg:maven/org\.apache\.commons/commons-.*$</packageUrl>
        <cve>CVE-2014-0114</cve>
    </suppress>
    
    <!-- JWT - False Positives -->
    <suppress>
        <notes>Suppress JWT library false positives</notes>
        <packageUrl regex="true">^pkg:maven/io\.jsonwebtoken/jjwt.*$</packageUrl>
        <cve>CVE-2019-10086</cve>
    </suppress>
    
    <!-- Test Dependencies -->
    <suppress>
        <notes>Suppress all test dependencies</notes>
        <packageUrl regex="true">^pkg:maven/org\.springframework\.boot/spring-boot-starter-test.*$</packageUrl>
        <scope>test</scope>
    </suppress>
    
    <suppress>
        <notes>Suppress Spring Security Test</notes>
        <packageUrl regex="true">^pkg:maven/org\.springframework\.security/spring-security-test.*$</packageUrl>
        <scope>test</scope>
    </suppress>
    
    <!-- Development Dependencies -->
    <suppress>
        <notes>Suppress development dependencies</notes>
        <packageUrl regex="true">^pkg:maven/org\.projectlombok/lombok.*$</packageUrl>
        <scope>provided</scope>
    </suppress>
    
</suppressions>